package craps;

public class Die {

    private int numDots, sides;

    public Die() {
        sides = 6;
    }

    public Die(int s) {
        sides = s;
    }

    public int roll() {
        return (int) (Math.random() * sides) + 1;
    }

    public int getNumDots() {
        return numDots;
    }
}
